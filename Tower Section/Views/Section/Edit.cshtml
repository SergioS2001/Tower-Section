@model ShellViewModel

<h2>Edit Section</h2>

@using (Html.BeginForm("UpdateSection", "Section", FormMethod.Post))
{
    @Html.HiddenFor(model => model.bottom_diameter)
    <div class="form-group">
        @Html.LabelFor(model => model.height)
        @Html.EditorFor(model => model.height, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.thickness)
        @Html.EditorFor(model => model.thickness, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.steel_density)
        @Html.EditorFor(model => model.steel_density, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
@Html.ActionLink("Back to Section", "Index")                                                             
}




