@model SectionViewModel

<h2>Edit Section</h2>

@using (Html.BeginForm("UpdateSection", "Section", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Tower_id)
    <div class="form-group">
        @Html.LabelFor(model => model.part_number)
        @Html.EditorFor(model => model.part_number, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.bottom_diameter)
        @Html.EditorFor(model => model.bottom_diameter, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.top_diameter)
        @Html.EditorFor(model => model.top_diameter, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
}




